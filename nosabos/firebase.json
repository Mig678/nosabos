{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ]
    }
  ],
  "hosting": {
    "public": "dist",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/talkTurn",
        "function": { "region": "us-central1", "name": "talkTurn" }
      },
      {
        "source": "/tts",
        "function": { "region": "us-central1", "name": "tts" }
      },
      { "source": "**", "destination": "/index.html" }
    ]
  },
  "emulators": {
    "hosting": { "host": "0.0.0.0", "port": 5000 },
    "functions": { "host": "0.0.0.0", "port": 5001 }
  }
}
